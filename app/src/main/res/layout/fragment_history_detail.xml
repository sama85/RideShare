<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="20dp">

    <!-- Driver & Trip Details Section -->

    <ImageView
        android:id="@+id/driver_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Ahmed Samy"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/driver_img"
        app:layout_constraintStart_toStartOf="@+id/driver_img"
        app:layout_constraintTop_toBottomOf="@+id/driver_img" />


    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="60dp"
        android:text="From: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driver_name" />

    <!-- Radio Buttons for Payment Methods -->
    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abasseya Square"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/from"
        app:layout_constraintTop_toTopOf="@+id/from" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="To: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/from"
        app:layout_constraintStart_toStartOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/from" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ain Shams University"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="@+id/source"
        app:layout_constraintStart_toStartOf="@+id/source"
        app:layout_constraintTop_toTopOf="@+id/to" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Cost: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/to"
        app:layout_constraintStart_toStartOf="@+id/to"
        app:layout_constraintTop_toBottomOf="@+id/to" />

    <TextView
        android:id="@+id/cost_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 EGP"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="@+id/destination"
        app:layout_constraintStart_toStartOf="@+id/destination"
        app:layout_constraintTop_toTopOf="@+id/cost" />

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Payment Method: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cost"
        app:layout_constraintStart_toStartOf="@+id/cost"
        app:layout_constraintTop_toBottomOf="@+id/cost" />

    <TextView
        android:id="@+id/payment_method_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="@+id/cost_value"
        app:layout_constraintStart_toStartOf="@+id/cost_value"
        app:layout_constraintTop_toTopOf="@+id/payment_method" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Status: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/payment_method"
        app:layout_constraintStart_toStartOf="@id/payment_method"
        app:layout_constraintTop_toBottomOf="@id/payment_method" />

    <TextView
        android:id="@+id/status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="@id/payment_method_value"
        app:layout_constraintStart_toStartOf="@id/payment_method_value"
        app:layout_constraintTop_toTopOf="@id/status" />

    <TextView
        android:id="@+id/vehicle_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Vehicle Register No:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/status"
        app:layout_constraintStart_toStartOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/status" />

    <TextView
        android:id="@+id/vehicle_no_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A12345"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="@+id/status_value"
        app:layout_constraintStart_toStartOf="@+id/status_value"
        app:layout_constraintTop_toTopOf="@+id/vehicle_no" />

    <TextView
        android:id="@+id/vehicle_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Vehicle Model: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_no"
        app:layout_constraintStart_toStartOf="@+id/vehicle_no"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_no" />

    <TextView
        android:id="@+id/vehicle_model_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BYD - Black"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_no_value"
        app:layout_constraintStart_toStartOf="@+id/vehicle_no_value"
        app:layout_constraintTop_toTopOf="@+id/vehicle_model" />


</androidx.constraintlayout.widget.ConstraintLayout>